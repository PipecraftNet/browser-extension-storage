{
  "name": "browser-extension-storage",
  "version": "0.0.3",
  "description": "Storage wrapper for browser extensions and userscripts",
  "type": "module",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./userscript": "./lib/userscript.js",
    "./local-storage": "./lib/local-storage.js"
  },
  "scripts": {
    "p": "prettier --write .",
    "lint": "prettier --write . && xo --fix",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PipecraftNet/browser-extension-storage.git"
  },
  "keywords": [
    "extensions",
    "userscripts",
    "storage"
  ],
  "author": "Pipecraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PipecraftNet/browser-extension-storage/issues"
  },
  "homepage": "https://github.com/PipecraftNet/browser-extension-storage#readme",
  "devDependencies": {
    "prettier": "^2.8.7",
    "xo": "^0.53.1"
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "globals": [
      "GM_getValue",
      "GM_setValue",
      "GM_deleteValue",
      "GM_listValues",
      "GM_addValueChangeListener",
      "GM_removeValueChangeListener",
      "localStorage",
      "document"
    ],
    "rules": {
      "camelcase": 0,
      "new-cap": 0,
      "no-global-assign": 0,
      "prefer-destructuring": 0,
      "capitalized-comments": 0
    }
  },
  "dependencies": {
    "@plasmohq/storage": "^1.3.1"
  }
}
